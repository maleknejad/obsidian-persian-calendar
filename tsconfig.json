{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"src/*": ["src/*"]
		},
		"inlineSourceMap": true,
		"allowSyntheticDefaultImports": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES2022",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"strictNullChecks": true,
		"verbatimModuleSyntax": true,
		"lib": ["DOM", "ES2022"]
	},
	"include": ["**/*.ts"]
}
